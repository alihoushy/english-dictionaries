{
     "name": "English Dictionaries",
     "version": "1.0",
     "manifest_version": 3,
     "author": "alihoushyaripour@gmail.com",
     "description": "A English to English translation chrome extension for web browsing",
     "permissions": ["tabs", "activeTab", "scripting", "contextMenus", "storage", "notifications", "clipboardRead"],
     "icons": {
          "16": "icons/icon16.png",
          "32": "icons/icon32.png",
          "48": "icons/icon48.png",
          "128": "icons/icon128.png"
     },
     "action": {
          "default_title": "English Dictionaries",
          "default_popup": "popup/popup.html"
     },
     "web_accessible_resources": [{
          "resources": ["icons/*", "assets/*"],
          "matches": ["<all_urls>"]
     }],
     "host_permissions": ["<all_urls>"],
     "content_scripts": [{
          "matches": ["<all_urls>"],
          "js": ["scripts/content-script.js"],
          "run_at": "document_start",
          "all_frames": true
     }],
     "background": {
          "service_worker": "service-worker.js"
     }
}